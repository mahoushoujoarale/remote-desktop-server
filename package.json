{
  "name": "remote-desktop-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsup"
  },
  "dependencies": {
    "express": "^4.18.2",
    "peer": "^1.0.0",
    "socket.io": "^4.6.1",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  },
  "tsup": {
    "entryPoints": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "target": "node16",
    "minify": true,
    "legacyOutput": true,
    "clean": true
  }
}
